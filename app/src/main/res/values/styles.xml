<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/normal_en</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="iconsColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:colorBackground">@color/lightBg</item>
        <item name="readBackground">?android:colorBackground</item>
        <item name="itemBg">#fff</item>
        <item name="toolbarColor">#fff</item>
        <item name="transparentBackground">#E6E7F9E8</item>
        <item name="transparentItem">#DEFFFFFF</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="iconsColor">@android:color/white</item>
        <item name="android:fontFamily">@font/normal_en</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:colorBackground">@color/color_background_dark</item>
        <item name="readBackground">@android:color/black</item>
        <item name="itemBg">@android:color/black</item>
        <item name="toolbarColor">@color/color_background_dark</item>
        <item name="transparentBackground">#E6000000</item>
        <item name="transparentItem">#DE121314</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top</item>
    </style>

    <style name="AppTheme.LibraryReadSurah">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="AppTheme.ProgressbarColor">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TransparentDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="QuranicText">
        <item name="android:textSize">@dimen/_27ssp</item>
        <item name="fontFamily">@font/amiri</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/normal_en</item>
    </style>

    <style name="AppTheme.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Title.Bold.Big">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="AppTheme.Title.Bold.Toolbar">
        <item name="android:fontFamily">@font/title_en</item>
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <!--Selected button color-->
        <item name="colorAccent">#FFAB00</item>
        <!--Unselected button color-->
        <item name="colorControlNormal">#3D5AFE</item>
    </style>

    <style name="AppTheme.Text.Normal" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/normal_en</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="AppTheme.Text.Normal.Mini">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="AppTheme.Text.Normal.Mini.Bold">
        <item name="android:textStyle">bold</item>

    </style>

    <style name="AppTheme.Text.Secondary" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/normal_en</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="AppTheme.Text.Secondary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationActive">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BottomNavigationInActive">
        <item name="android:textColor">@color/colorDisabled</item>
        <item name="android:textColorSecondary">@color/colorDisabled</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="boxBackgroundColor">@color/colorSecondary</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="hintTextAppearance">@style/TextInputLayout.HintText</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>

    </style>

    <style name="TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorDisabled</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="Widget.MPM.Menu.Dark.DarkBackground">
        <item name="android:colorBackground">@color/color_background_dark</item>
    </style>

</resources>
