<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="co.jp.smagroup.musahaf"
        android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
            android:name=".ui.commen.sharedComponent.MushafApplication"
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="co.jp.smagroup.musahaf.ui.openSourceLicenses.OpenSourceLicenseActivity"></activity>
        <activity android:name=".ui.search.SearchActivity"></activity>
        <activity
                android:name=".ui.library.read.ReadLibraryActivity"
                android:exported="true" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                    android:name="android.app.shortcuts"
                    android:resource="@xml/shortcuts" />
        </activity>
        <activity
                android:name=".ui.quran.read.ReadQuranActivity"
                android:configChanges="screenSize|orientation"
                android:launchMode="singleTask" />
        <activity android:name=".ui.library.manage.ManageLibraryActivity" />
        <activity
                android:name=".ui.quran.sharedComponent.ShortcutsActivity"
                android:exported="true" />

        <service
                android:name=".framework.DownloadService"
                android:enabled="true">
        </service>
    </application>

</manifest>